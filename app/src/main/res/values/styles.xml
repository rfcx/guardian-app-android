<resources xmlns:tools="http://schemas.android.com/tools">
	
	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@android:color/black</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:textSize">@dimen/text_medium</item>
		<item name="titleTextColor">@android:color/white</item>
	</style>
	
	<style name="AppTheme.ForTutorial" parent="Theme.MaterialComponents.Light.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimary</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:textSize">@dimen/text_medium</item>
		<item name="titleTextColor">@android:color/white</item>
	</style>
	
	<style name="AppTheme.SyncLoadingProgress" parent="AppTheme">
		<item name="colorAccent">@color/grey_default</item>
	</style>
	
	<style name="CustomProgressBarHorizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
		<item name="theme">@style/AppTheme.SyncLoadingProgress</item>
		<item name="android:minHeight">8dp</item>
	</style>
	
	<style name="TextAppearance.Design.Snackbar.Message" parent="android:TextAppearance" tools:override="true">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textSize">50sp</item>
	</style>
	
	<style name="TextButton" parent="Widget.AppCompat.Button.Borderless.Colored">
		<item name="android:minHeight">36dp</item>
		<item name="android:textSize">@dimen/text_small</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:padding">@dimen/margin_padding_xsmall</item>
	</style>
	
	<style name="TextButton.Bold" parent="TextButton">
		<item name="android:textStyle">bold</item>
	</style>
	
	<style name="SwitchCompatStyle">
		<item name="thumbTint">@color/switch_color</item>
		<item name="showText">false</item>
	</style>
	
	<!-- Invitation -->
	
	<!-- EditText -->
	<style name="RangerEditText" parent="Widget.AppCompat.EditText" />
	
	<style name="RangerEditText.NoBackground" parent="RangerEditText">
		<item name="android:padding">@dimen/margin_padding_normal</item>
		<item name="android:background">@color/transparent</item>
	</style>
	
	<style name="RangerEditText.Background" parent="RangerEditText">
		<item name="android:padding">@dimen/margin_padding_normal</item>
		<item name="android:backgroundTint" tools:targetApi="lollipop">@color/gray_30</item>
	</style>
	
	<style name="RangerEditText.EditTextBox" parent="RangerEditText">
		<item name="android:textColor">@color/text_primary</item>
		<item name="android:textStyle">bold</item>
		<item name="android:padding">@dimen/margin_padding_normal</item>
		<item name="android:typeface">monospace</item>
		<item name="android:background">@android:drawable/editbox_background_normal</item>
		<item name="android:textSize">@dimen/text_medium</item>
	</style>
	
	<!-- TextView -->
	<style name="RangerText" parent="Widget.AppCompat.TextView"/>
	
	<style name="RangerText.Headline" parent="RangerText">
		<item name="android:textColor">@color/text_primary</item>
		<item name="android:textSize">24sp</item>
		<item name="android:fontFamily">sans-serif</item>
	</style>
	
	<style name="RangerText.Subhead" parent="RangerText">
		<item name="android:textColor">@color/text_primary</item>
		<item name="android:textSize">@dimen/text_large</item>
		<item name="android:fontFamily">sans-serif</item>
	</style>
	
	<style name="RangerText.Tutorial" parent="RangerText">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textSize">@dimen/text_xlarge</item>
		<item name="android:fontFamily">@font/caveat_regular</item>
	</style>
	
	<style name="RangerText.Body" parent="RangerText">
		<item name="android:textColor">@color/text_primary</item>
		<item name="android:textSize">@dimen/text_medium</item>
		<item name="android:fontFamily">sans-serif</item>
	</style>
	
	<style name="RangerText.Label" parent="TextAppearance.AppCompat.Body2">
		<item name="android:textColor">@color/text_primary</item>
		<item name="android:textSize">@dimen/text_small</item>
		<item name="android:fontFamily">sans-serif</item>
	</style>
	
	<style name="RangerText.Label.Secondary" parent="RangerText">
		<item name="android:textColor">@color/text_secondary</item>
		<item name="android:textSize">@dimen/text_small</item>
		<item name="android:fontFamily">sans-serif</item>
	</style>
	
	<style name="RangerText.Title" parent="TextAppearance.AppCompat.Body2">
		<item name="android:textColor">@color/text_primary</item>
		<item name="android:textSize">@dimen/text_small</item>
		<item name="android:textAllCaps">true</item>
	</style>
	
	<style name="RangerText.SubTitle" parent="Base.TextAppearance.AppCompat.Title">
		<item name="android:textColor">@color/text_black</item>
		<item name="android:textSize">@dimen/text_small</item>
	</style>
	
	<style name="RangerText.SubTitle.Secondary" parent="TextAppearance.AppCompat.Body1">
		<item name="android:textColor">@color/text_secondary</item>
		<item name="android:textSize">@dimen/text_small</item>
	</style>
	
	<style name="RangerText.Caption" parent="RangerText">
		<item name="android:textColor">@color/text_secondary</item>
		<item name="android:textSize">@dimen/text_xsmall</item>
		<item name="android:fontFamily">sans-serif</item>
	</style>
	
	<!-- Button -->
	<style name="RangerButton" parent="Widget.AppCompat.Button"/>
	
	<style name="RangerButton.GreenButton" parent="RangerButton">
		<item name="android:background">@drawable/bg_color_primary_button</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@android:color/white</item>
	</style>
	
	<style name="RangerButton.FacebookButton" parent="RangerButton">
		<item name="android:background">@drawable/bg_facebook_login_button</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@android:color/white</item>
	</style>
	
	<style name="RangerButton1" parent="RangerButton">
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_weight">1</item>
		<item name="android:textSize">@dimen/text_small</item>
		<item name="android:textColor">@android:color/white</item>
	</style>
	
	<style name="RangerButton.Negative" parent="RangerButton1">
		<item name="android:background">@drawable/button_negative</item>
	</style>
	
	<style name="RangerButton.Positive" parent="RangerButton1">
		<item name="android:background">@drawable/button_positive</item>
	</style>
	

</resources>

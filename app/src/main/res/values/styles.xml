<resources xmlns:tools="http://schemas.android.com/tools">
	
	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/backgroundColor</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:textSize">@dimen/text_medium</item>
		<item name="titleTextColor">@color/white</item>
		<item name="android:windowTranslucentStatus">false</item>
		<item name="android:statusBarColor">@color/statusColor</item>
	</style>
	
	<style name="AppTheme.ForTutorial" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimary</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:textSize">@dimen/text_medium</item>
		<item name="titleTextColor">@android:color/white</item>
	</style>
	
	<style name="SwitchCompatStyle">
		<item name="thumbTint">@color/switch_color</item>
		<item name="showText">false</item>
	</style>
	
	<!-- Invitation -->
	
	<!-- EditText -->
	<style name="RangerEditText" parent="Widget.AppCompat.EditText" />
	
	<style name="RangerEditText.NoBackground" parent="RangerEditText">
		<item name="android:padding">@dimen/margin_padding_normal</item>
		<item name="android:background">@color/transparent</item>
	</style>
	
	<style name="RangerEditText.Background" parent="RangerEditText">
		<item name="android:padding">@dimen/margin_padding_normal</item>
		<item name="android:backgroundTint" tools:targetApi="lollipop">@color/gray_30</item>
	</style>
	
	<style name="RangerEditText.EditTextBox" parent="RangerEditText">
		<item name="android:textColor">@color/text_primary</item>
		<item name="android:textStyle">bold</item>
		<item name="android:padding">@dimen/margin_padding_normal</item>
		<item name="android:typeface">monospace</item>
		<item name="android:background">@android:drawable/editbox_background_normal</item>
		<item name="android:textSize">@dimen/text_medium</item>
	</style>
	
	<!-- TextView -->
	<style name="RangerText" parent="Widget.AppCompat.TextView" />
	
	<style name="RangerText.Headline" parent="RangerText">
		<item name="android:textColor">@color/text_primary</item>
		<item name="android:textSize">20sp</item>
		<item name="android:fontFamily">sans-serif</item>
	</style>
	
	<style name="RangerText.Subhead" parent="RangerText">
		<item name="android:textColor">@color/text_primary</item>
		<item name="android:textSize">@dimen/text_large</item>
		<item name="android:fontFamily">sans-serif</item>
	</style>
	
	<style name="RangerText.Tutorial" parent="RangerText">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textSize">@dimen/text_medium</item>
		<item name="android:fontFamily">@font/sriracha</item>
	</style>
	
	<style name="RangerText.Body" parent="RangerText">
		<item name="android:textColor">@color/text_primary</item>
		<item name="android:textSize">@dimen/text_medium</item>
		<item name="android:fontFamily">sans-serif</item>
	</style>

    <style name="RangerText.Body.Small" parent="RangerText.Body">
        <item name="android:textSize">@dimen/text_small</item>
    </style>
	
	<style name="RangerText.Label" parent="TextAppearance.AppCompat.Body2">
		<item name="android:textColor">@color/text_primary</item>
		<item name="android:textSize">@dimen/text_small</item>
		<item name="android:fontFamily">sans-serif</item>
	</style>
	
	<style name="RangerText.Label.Secondary" parent="RangerText">
		<item name="android:textColor">@color/text_secondary</item>
		<item name="android:textSize">@dimen/text_small</item>
		<item name="android:fontFamily">sans-serif</item>
	</style>
	
	<style name="RangerText.Title" parent="TextAppearance.AppCompat.Body2">
		<item name="android:textColor">@color/text_primary</item>
		<item name="android:textSize">@dimen/text_small</item>
		<item name="android:textAllCaps">true</item>
	</style>
	
	<style name="RangerText.SubTitle" parent="Base.TextAppearance.AppCompat.Title">
		<item name="android:textColor">@color/text_black</item>
		<item name="android:textSize">@dimen/text_small</item>
	</style>

    <style name="RangerText.SubTitle.Bold" parent="RangerText.SubTitle">
        <item name="android:textStyle">bold</item>
    </style>
	
	<style name="RangerText.SubTitle.Secondary" parent="TextAppearance.AppCompat.Body1">
		<item name="android:textColor">@color/text_secondary</item>
		<item name="android:textSize">@dimen/text_small</item>
	</style>
	
	<style name="RangerText.Caption" parent="RangerText">
		<item name="android:textColor">@color/text_secondary</item>
		<item name="android:textSize">@dimen/text_xsmall</item>
		<item name="android:fontFamily">sans-serif</item>
	</style>
	
	<!-- Button -->
	<style name="RangerButton" parent="Widget.AppCompat.Button" />
	
	<style name="RangerButton.GreenButton.Line" parent="RangerButton">
		<item name="android:background">@drawable/bg_button_green_outline</item>
		<item name="android:textColor">@color/color_button_outline_text</item>
	</style>
	
	<style name="RangerButton.GreenButton" parent="RangerButton">
		<item name="android:background">@drawable/bg_color_primary_button</item>
		<item name="android:textColor">@color/color_button_text</item>
	</style>
	
	<style name="RangerButton.FacebookButton" parent="RangerButton">
		<item name="android:background">@drawable/bg_facebook_login_button</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

    <style name="RangerButton.File.DeActive" parent="RangerButton">
        <item name="android:background">@drawable/bg_color_deactive_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_deactive_text</item>
        <item name="android:textSize">@dimen/text_xxsmall</item>
    </style>

    <style name="RangerButton.File.Active" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_color_active_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_activate_text</item>
        <item name="android:textSize">@dimen/text_xxsmall</item>
    </style>
	
	<!-- Toolbar -->
	<style name="AppTheme.Toolbar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<item name="colorPrimary">@color/white</item>
		<item name="colorPrimaryDark">@color/white</item>
	</style>
	
	<style name="BottomAppBar" parent="Widget.MaterialComponents.BottomAppBar.Colored">
		<item name="backgroundTint">@color/bottomBar</item>
	</style>
	
	<style name="Toolbar.TitleText" parent="Widget.MaterialComponents.Toolbar.Primary">
		<item name="android:textSize">18sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	
	<!-- Dialog -->
	<style name="DialogCustom" parent="ThemeOverlay.AppCompat.Dialog.Alert">
		<item name="colorAccent">@color/colorPrimary</item>
		<item name="android:textColorPrimary">@color/text_primary</item>
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="android:background">@color/dialogColor</item>
		<item name="android:textColorAlertDialogListItem">@color/text_primary</item>
		<item name="android:textColorSecondary">@color/text_primary</item>
		<item name="buttonBarPositiveButtonStyle">@style/PositiveButton</item>
		<item name="buttonBarNegativeButtonStyle">@style/NegativeButton</item>
	</style>
	
	<style name="PositiveButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
		<item name="android:textColor">@color/colorPrimary</item>
		<item name="lineSpacing">0.5dp</item>
	</style>
	
	<style name="NegativeButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
		<item name="android:textColor">@color/colorPrimary</item>
		<item name="lineSpacing">0.5dp</item>
	</style>

    <style name="BaseAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/BaseAlertTitle</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/dialogColor</item>
        <item name="buttonBarPositiveButtonStyle">@style/BaseAlertButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/BaseAlertButton</item>
    </style>
    <style name="BaseAlertTitle" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textAppearance">@style/BaseAlertSub</item>
    </style>
    <style name="BaseAlertSub" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="BaseAlertButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BannerButton" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
        <item name="lineSpacing">0.5dp</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingStart="@dimen/margin_padding_normal"
    android:paddingEnd="@dimen/margin_padding_normal"
    tools:context="org.rfcx.ranger.view.InvitationActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <ImageView
        android:id="@+id/iv_invitation"
        android:layout_width="@dimen/invitation_icon_size"
        android:layout_height="@dimen/invitation_icon_size"
        app:layout_constraintTop_toTopOf="@+id/guideline15"
        app:srcCompat="@drawable/ic_facebook" />

    <TextView
        android:id="@+id/tv_invitation_title"
        android:layout_width="0dp"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_marginTop="@dimen/margin_padding_normal"
        app:layout_constraintTop_toBottomOf="@+id/iv_invitation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/invitation_title"
        android:layout_height="wrap_content" />

    <EditText
        app:layout_constraintTop_toBottomOf="@+id/tv_invitation_title"
        android:id="@+id/input_invitation_code"
        android:inputType="number"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Code"
        android:layout_marginTop="@dimen/margin_padding_normal"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/margin_padding_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:fabSize="normal"
        app:backgroundTint="@android:color/white"
        app:srcCompat="@drawable/ic_arrow_forward" />
</androidx.constraintlayout.widget.ConstraintLayout>

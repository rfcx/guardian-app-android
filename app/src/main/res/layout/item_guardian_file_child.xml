<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fileVersionTextView"
        style="@style/RangerText.Label.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_padding_xlarge"
        android:paddingTop="@dimen/margin_padding_normal"
        android:paddingEnd="@dimen/margin_padding_large"
        android:paddingBottom="@dimen/margin_padding_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TextView" />


    <TextView
        android:id="@+id/fileInstalledVersionTextView"
        style="@style/RangerText.Label.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_padding_normal"
        android:paddingTop="@dimen/margin_padding_normal"
        android:paddingEnd="@dimen/margin_padding_large"
        android:paddingBottom="@dimen/margin_padding_normal"
        app:layout_constraintStart_toEndOf="@id/fileVersionTextView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TextView" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fileSendButton"
        style="@style/RangerButton.GreenButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin_padding_normal"
        android:enabled="true"
        android:text="update to"
        android:textSize="@dimen/text_xxsmall"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/fileVersionTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/fileVersionTextView" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/fileLoading"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin_padding_normal"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/fileInstalledVersionTextView"
        app:layout_constraintBottom_toBottomOf="@id/fileVersionTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/fileVersionTextView" />

    <TextView
        android:id="@+id/fileUpToDateTextView"
        style="@style/RangerText.Label.Secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_padding_xlarge"
        android:paddingTop="@dimen/margin_padding_normal"
        android:paddingEnd="@dimen/margin_padding_large"
        android:paddingBottom="@dimen/margin_padding_normal"
        android:text="up to date"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/fileVersionTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/fileVersionTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	
	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/ivAlertIcon"
		android:layout_width="@dimen/report_icon_size"
		android:layout_height="@dimen/report_icon_size"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:layout_marginStart="@dimen/margin_padding_normal"
		tools:src="@drawable/ic_vehicle" />
	
	<TextView
		android:id="@+id/guardianListDetailTextView"
		style="@style/RangerText.Body"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:padding="@dimen/margin_padding_normal"
		app:layout_constraintStart_toEndOf="@id/ivAlertIcon"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="Vehicle" />
	
	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/circleImageView"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_marginEnd="@dimen/margin_padding_xlarge"
		android:src="@drawable/bg_circle_green"
		app:layout_constraintBottom_toBottomOf="@id/guardianListDetailTextView"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@id/guardianListDetailTextView" />
	
	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/numOfEventsNotOpen"
		style="@style/RangerText.Caption"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="0"
		android:textColor="@color/text_white"
		app:layout_constraintBottom_toBottomOf="@id/circleImageView"
		app:layout_constraintEnd_toEndOf="@id/circleImageView"
		app:layout_constraintStart_toStartOf="@id/circleImageView"
		app:layout_constraintTop_toTopOf="@id/circleImageView" />
	
	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/guardianListDetailRecycler"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="parent"
		android:visibility="gone"
		android:layout_marginStart="@dimen/margin_padding_xlarge"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/guardianListDetailTextView"/>

</androidx.constraintlayout.widget.ConstraintLayout>
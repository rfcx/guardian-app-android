<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:minWidth="300dp"
	android:orientation="vertical"
	android:padding="@dimen/margin_padding_normal"
	tools:context="android.rfcx.org.ranger.view.AlertDialogFragment">

	<TextView
		android:id="@+id/alertTitleTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="@dimen/margin_padding_normal"
		android:text="@string/alert_title_format"
		android:textColor="@color/text_primary"
		android:textSize="@dimen/text_large"
		android:textStyle="bold" />

	<FrameLayout
		android:id="@+id/stateLayout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/alertTitleTextView"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="@dimen/margin_padding_normal"
		android:layout_marginTop="@dimen/margin_padding_normal"
		android:gravity="center">

		<TextView
			android:id="@+id/alertPlayerStateTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:contentDescription="@string/app_name"
			android:text="@string/alert_state_loading" />

		<Button
			android:id="@+id/alertReplayButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:contentDescription="@string/app_name"
			android:drawableStart="@drawable/ic_replay_black_24dp"
			android:text="@string/alert_state_replay"
			android:visibility="invisible" />

	</FrameLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/stateLayout"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="@dimen/margin_padding_large"
		android:orientation="horizontal">

		<Button
			android:id="@+id/alertNoButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="@dimen/margin_padding_normal"
			android:background="@color/divider"
			android:foreground="?android:attr/selectableItemBackground"
			android:text="@string/alert_no_button"
			android:textColor="@android:color/white"
			android:textStyle="bold" />

		<Button
			android:id="@+id/alertYesButton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/margin_padding_normal"
			android:background="@color/colorPrimaryDark"
			android:foreground="?android:attr/selectableItemBackground"
			android:text="@string/alert_yes_button"
			android:textColor="@android:color/white"
			android:textStyle="bold" />

	</LinearLayout>


</RelativeLayout>

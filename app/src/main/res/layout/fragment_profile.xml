<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools">
	
	<data>
		
		<variable
			name="view"
			type="android.view.View" />
		
		<variable
			name="viewModel"
			type="org.rfcx.ranger.view.profile.ProfileViewModel" />
		
		<variable
			name="onClickPassword"
			type="android.view.View.OnClickListener" />
		
		<variable
			name="onClickProject"
			type="android.view.View.OnClickListener" />
		
		<variable
			name="onClickStartDemo"
			type="android.view.View.OnClickListener" />
		
		<variable
			name="onClickRatingApp"
			type="android.view.View.OnClickListener" />
		
		<variable
			name="onClickFeedback"
			type="android.view.View.OnClickListener" />
		
		<variable
			name="onClickProfilePhoto"
			type="android.view.View.OnClickListener" />
		
		<variable
			name="onClickCoordinates"
			type="android.view.View.OnClickListener" />
	
	</data>
	
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		
		<LinearLayout
			android:id="@+id/userInfoLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingTop="@dimen/margin_padding_large"
			android:paddingBottom="@dimen/fab_height_half">
			
			<LinearLayout
				android:id="@+id/userProfileLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				
				<ImageView
					android:id="@+id/userProfileImageView"
					android:layout_width="@dimen/profile_photo_size"
					android:layout_height="@dimen/profile_photo_size"
					android:layout_marginStart="@dimen/margin_padding_normal"
					android:layout_marginTop="@dimen/margin_padding_normal"
					android:layout_marginBottom="@dimen/margin_padding_normal"
					android:contentDescription="@string/app_name"
					android:onClick="@{onClickProfilePhoto}"
					android:src="@drawable/bg_circle_grey"
					android:visibility="gone" />
				
				<LinearLayout
					android:id="@+id/userProfileTextLayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">
					
					<TextView
						android:id="@+id/userNameTextView"
						style="@style/RangerText.Headline"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/margin_padding_normal"
						android:layout_marginTop="@dimen/margin_padding_normal"
						android:text="@{viewModel.userName}"
						tools:text="Example" />
					
					<LinearLayout
						android:id="@+id/userLocationLayout"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="@dimen/margin_padding_normal"
						android:layout_marginTop="@dimen/margin_padding_xsmall"
						android:layout_marginEnd="@dimen/margin_padding_small"
						android:layout_marginBottom="@dimen/margin_padding_xsmall"
						android:gravity="center_vertical"
						tools:ignore="UseCompoundDrawables">
						
						<ImageView
							android:id="@+id/userLocationImageView"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:contentDescription="@string/app_name"
							android:src="@drawable/ic_point" />
						
						<TextView
							android:id="@+id/userLocationTextView"
							style="@style/RangerText.Label.Secondary"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingStart="@dimen/margin_padding_small"
							android:text="@{viewModel.userSite}"
							android:textColor="@color/text_secondary"
							tools:text="Tembe" />
					
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
			
			<View
				android:layout_width="match_parent"
				android:layout_height="10dp"
				android:layout_marginTop="@dimen/margin_padding_small"
				android:background="@color/grey_light" />
			
			<TextView
				android:id="@+id/notificationTextView"
				style="@style/RangerText.Title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingStart="@dimen/margin_padding_normal"
				android:paddingTop="@dimen/margin_padding_normal"
				android:paddingBottom="@dimen/margin_padding_xsmall"
				android:text="@string/notifications"
				android:textSize="@dimen/text_small" />
			
			<LinearLayout
				android:id="@+id/receiveAlertLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/margin_padding_small"
				android:background="?attr/selectableItemBackground"
				android:onClick="@{onClickProject}"
				android:orientation="vertical"
				android:paddingTop="@dimen/margin_padding_normal"
				android:paddingBottom="@dimen/margin_padding_normal">
				
				<TextView
					android:id="@+id/receiveAlertTitle"
					style="@style/RangerText.SubTitle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/margin_padding_normal"
					android:layout_marginEnd="@dimen/margin_padding_small"
					android:text="@string/receive_alert_notification" />
			</LinearLayout>
			
			<View
				android:layout_width="match_parent"
				android:layout_height="10dp"
				android:layout_marginTop="@dimen/margin_padding_small"
				android:background="@color/grey_light" />
			
			<TextView
				android:id="@+id/locationTextView"
				style="@style/RangerText.Title"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingStart="@dimen/margin_padding_normal"
				android:paddingTop="@dimen/margin_padding_normal"
				android:paddingBottom="@dimen/margin_padding_xsmall"
				android:text="@string/location" />
			
			<LinearLayout
				android:id="@+id/coordinatesLinearLayout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="?attr/selectableItemBackground"
				android:onClick="@{onClickCoordinates}"
				android:orientation="vertical"
				android:paddingTop="@dimen/margin_padding_normal"
				android:paddingBottom="@dimen/margin_padding_small">
				
				<TextView
					android:id="@+id/coordinatesTextViewTextView"
					style="@style/RangerText.SubTitle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/margin_padding_normal"
					android:layout_marginEnd="@dimen/margin_padding_small"
					android:text="@string/coordinates" />
				
				<TextView
					android:id="@+id/formatCoordinatesTextView"
					style="@style/RangerText.SubTitle.Secondary"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/margin_padding_normal"
					android:layout_marginEnd="@dimen/margin_padding_small"
					android:text="@{viewModel.formatCoordinates}"
					tools:text="DD" />
			
			</LinearLayout>
			
			<View
				android:layout_width="match_parent"
				android:layout_height="10dp"
				android:background="@color/grey_light" />
			
			<TextView
				android:id="@+id/additionalTextView"
				style="@style/RangerText.Title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/margin_padding_normal"
				android:layout_marginTop="@dimen/margin_padding_normal"
				android:layout_marginEnd="@dimen/margin_padding_small"
				android:layout_marginBottom="@dimen/margin_padding_small"
				android:text="@string/profile_aditional_label"
				android:textAllCaps="true"
				android:textColor="@color/text_primary"
				android:textSize="@dimen/text_small" />
			
			<TextView
				android:id="@+id/appVersionTextView"
				style="@style/RangerText.SubTitle.Secondary"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/margin_padding_normal"
				android:layout_marginTop="@dimen/margin_padding_small"
				android:layout_marginEnd="@dimen/margin_padding_small"
				android:text="@string/profile_app_version_label"
				android:textColor="@color/text_secondary" />
			
			<TextView
				android:id="@+id/versionTextView"
				style="@style/RangerText.SubTitle.Secondary"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/margin_padding_normal"
				android:layout_marginEnd="@dimen/margin_padding_small"
				android:layout_marginBottom="@dimen/margin_padding_small"
				android:text="@{viewModel.appVersion}"
				android:textColor="@color/text_secondary"
				tools:text="2.0.0(135)" />
			
			<TextView
				android:id="@+id/feedbackTextView"
				style="@style/RangerText.SubTitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="?attr/selectableItemBackground"
				android:onClick="@{onClickFeedback}"
				android:paddingStart="@dimen/margin_padding_normal"
				android:paddingTop="@dimen/margin_padding_normal"
				android:paddingEnd="@dimen/margin_padding_small"
				android:paddingBottom="@dimen/margin_padding_normal"
				android:text="@string/profile_feedback_label" />
			
			<TextView
				android:id="@+id/rateAppTextView"
				style="@style/RangerText.SubTitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="?attr/selectableItemBackground"
				android:onClick="@{onClickRatingApp}"
				android:paddingStart="@dimen/margin_padding_normal"
				android:paddingTop="@dimen/margin_padding_normal"
				android:paddingEnd="@dimen/margin_padding_small"
				android:paddingBottom="@dimen/margin_padding_normal"
				android:text="@string/profile_rate_app_label" />
			
			<View
				android:layout_width="match_parent"
				android:layout_height="10dp"
				android:background="@color/grey_light" />
			
			<TextView
				android:id="@+id/accountTextView"
				style="@style/RangerText.Title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/margin_padding_normal"
				android:layout_marginTop="@dimen/margin_padding_normal"
				android:layout_marginEnd="@dimen/margin_padding_small"
				android:layout_marginBottom="@dimen/margin_padding_small"
				android:text="@string/account"
				android:textAllCaps="true"
				android:textColor="@color/text_primary"
				android:textSize="@dimen/text_small" />
			
			<TextView
				android:id="@+id/changeImageProfileTextView"
				style="@style/RangerText.SubTitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="?attr/selectableItemBackground"
				android:onClick="@{onClickProfilePhoto}"
				android:paddingStart="@dimen/margin_padding_normal"
				android:paddingTop="@dimen/margin_padding_normal"
				android:paddingEnd="@dimen/margin_padding_small"
				android:paddingBottom="@dimen/margin_padding_normal"
				android:text="@string/change_profile_photo"
				android:visibility="gone" />
			
			<TextView
				android:id="@+id/changePasswordTextView"
				style="@style/RangerText.SubTitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="?attr/selectableItemBackground"
				android:onClick="@{onClickPassword}"
				android:paddingStart="@dimen/margin_padding_normal"
				android:paddingTop="@dimen/margin_padding_normal"
				android:paddingEnd="@dimen/margin_padding_small"
				android:paddingBottom="@dimen/margin_padding_normal"
				android:text="@string/change_password"
				android:visibility="gone" />
			
			<TextView
				android:id="@+id/logoutTextView"
				style="@style/RangerText.SubTitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="?attr/selectableItemBackground"
				android:onClick="@{() -> viewModel.onLogout()}"
				android:paddingStart="@dimen/margin_padding_normal"
				android:paddingTop="@dimen/margin_padding_normal"
				android:paddingEnd="@dimen/margin_padding_small"
				android:paddingBottom="@dimen/margin_padding_normal"
				android:text="@string/profile_sign_out_label" />
		
		</LinearLayout>
	</ScrollView>
</layout>

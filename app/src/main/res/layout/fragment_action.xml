<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".view.report.create.ActionFragment">
	
	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/siteNameTextView"
		style="@style/RangerText.Body"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/margin_padding_normal"
		android:textStyle="bold"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="Site Z" />
	
	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/whatActionTextView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingStart="@dimen/margin_padding_normal"
		android:text="@string/what_action"
		app:layout_constraintTop_toBottomOf="@id/siteNameTextView" />
	
	<RadioGroup
		android:id="@+id/actionRadioGroup"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="@dimen/margin_padding_normal"
		
		app:layout_constraintTop_toBottomOf="@id/whatActionTextView">
		
		<RadioButton
			android:id="@+id/collectedRadioButton"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="@dimen/margin_padding_small"
			android:background="@drawable/radio_selector"
			android:button="@color/transparent"
			android:paddingStart="@dimen/margin_padding_normal"
			android:paddingEnd="@dimen/margin_padding_normal"
			android:text="@string/collected_evidence"
			android:textColor="@drawable/radio_text_color" />
		
		<RadioButton
			android:id="@+id/warningRadioButton"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="@dimen/margin_padding_small"
			android:background="@drawable/radio_selector"
			android:button="@color/transparent"
			android:paddingStart="@dimen/margin_padding_normal"
			android:paddingEnd="@dimen/margin_padding_normal"
			android:text="@string/issue_a_warning"
			android:textColor="@drawable/radio_text_color" />
		
		<RadioButton
			android:id="@+id/confiscatedRadioButton"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="@dimen/margin_padding_small"
			android:background="@drawable/radio_selector"
			android:button="@color/transparent"
			android:paddingStart="@dimen/margin_padding_normal"
			android:paddingEnd="@dimen/margin_padding_normal"
			android:text="@string/confiscated_equipment"
			android:textColor="@drawable/radio_text_color" />
		
		<RadioButton
			android:id="@+id/fineRadioButton"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginTop="@dimen/margin_padding_small"
			android:background="@drawable/radio_selector"
			android:button="@color/transparent"
			android:paddingStart="@dimen/margin_padding_normal"
			android:paddingEnd="@dimen/margin_padding_normal"
			android:text="@string/issue_a_fine"
			android:textColor="@drawable/radio_text_color" />
	</RadioGroup>
	
	<View
		android:id="@+id/lineBottomView"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginBottom="@dimen/margin_padding_normal"
		android:background="@drawable/bg_grey_light"
		app:layout_constraintBottom_toTopOf="@id/nextStepButton"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />
	
	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/backgroundButtonImageView"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_alignParentBottom="true"
		android:alpha="0.5"
		android:src="@color/white"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@+id/lineBottomView" />
	
	<androidx.appcompat.widget.AppCompatButton
		android:id="@+id/nextStepButton"
		style="@style/RangerButton.GreenButton"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/margin_padding_normal"
		android:enabled="false"
		android:text="@string/next"
		app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

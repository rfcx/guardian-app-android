<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/colorPrimary"
	android:gravity="center"
	android:orientation="vertical"
	tools:context=".view.LoginActivity">

	<ImageView
		android:id="@+id/logoImg"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/margin_padding_normal"
		android:contentDescription="@string/app_name"
		android:src="@drawable/app_logo_step4" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/margin_padding_normal"
		android:fontFamily="@font/rg2014b"
		android:gravity="center"
		android:text="@string/app_name"
		android:textAllCaps="true"
		android:textColor="@color/text_white"
		android:textSize="40sp" />

	<EditText
		android:id="@+id/loginEmailEditText"
		style="@style/RangerEdit"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginEnd="@dimen/margin_padding_large"
		android:layout_marginStart="@dimen/margin_padding_large"
		android:layout_marginTop="@dimen/margin_padding_large"
		android:hint="@string/email"
		android:inputType="textEmailAddress"
		android:visibility="invisible" />

	<EditText
		android:id="@+id/loginPasswordEditText"
		style="@style/RangerEdit"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginEnd="@dimen/margin_padding_large"
		android:layout_marginStart="@dimen/margin_padding_large"
		android:layout_marginTop="@dimen/margin_padding_large"
		android:hint="@string/password"
		android:inputType="textPassword"
		android:visibility="invisible" />

	<Button
		android:id="@+id/loginButton"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginEnd="@dimen/margin_padding_large"
		android:layout_marginStart="@dimen/margin_padding_large"
		android:layout_marginTop="@dimen/margin_padding_large"
		android:background="@color/colorPrimaryDark"
		android:foreground="?android:attr/selectableItemBackground"
		android:text="@string/login"
		android:textColor="@android:color/white"
		android:textStyle="bold"
		android:visibility="invisible" />

	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
				  android:layout_marginEnd="@dimen/margin_padding_large"
				  android:layout_marginStart="@dimen/margin_padding_large"
				  android:layout_marginTop="@dimen/margin_padding_large">
		<View
				android:layout_width="0dp"
				android:layout_height="1dp"
				android:layout_weight="1"
				android:layout_gravity="center_vertical"
				android:background="@color/text_almost_white"/>
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="@dimen/margin_padding_large"
				android:layout_marginStart="@dimen/margin_padding_large"
				android:textColor="@color/text_almost_white"
				android:textSize="@dimen/text_small"
				android:text="@string/or"/>
		<View
				android:layout_width="0dp"
				android:layout_height="1dp"
				android:layout_weight="1"
				android:layout_gravity="center_vertical"
				android:background="@color/text_almost_white"/>
	</LinearLayout>


	<Button
			android:id="@+id/facebookLoginButton"
			style="@style/LoginButton.FacebookButton"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginEnd="@dimen/margin_padding_large"
			android:layout_marginStart="@dimen/margin_padding_large"
			android:layout_marginTop="@dimen/margin_padding_large"
			android:text="@string/connect_with_facebook" />

	<ProgressBar
			android:id="@+id/loginProgress"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin_padding_large"
			android:visibility="gone"/>

	<TextView
		android:id="@+id/loginErrorTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/margin_padding_large"
		android:layout_marginEnd="@dimen/margin_padding_large"
		android:background="@color/grey_default"
		android:gravity="center"
		android:paddingStart="8sp"
		android:paddingTop="2sp"
		android:paddingEnd="8sp"
		android:paddingBottom="2sp"
		android:textColor="@color/text_white"
		android:visibility="gone"
		tools:text="Error Login" />

</LinearLayout>


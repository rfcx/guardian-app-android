<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_padding_small">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivAlertIcon"
        android:layout_width="@dimen/report_icon_size"
        android:layout_height="@dimen/report_icon_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_truck" />

    <TextView
        android:id="@+id/tvAlertTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_small"
        android:layout_marginTop="@dimen/margin_padding_xsmall"
        android:layout_marginEnd="@dimen/margin_padding_small"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_large"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivAlertIcon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Alert Title" />

    <TextView
        android:id="@+id/tvAlertFromSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_xsmall"
        android:drawableStart="@drawable/ic_place"
        android:drawablePadding="@dimen/margin_padding_xsmall"
        android:gravity="center_vertical"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/text_medium"
        app:layout_constraintStart_toStartOf="@+id/tvAlertTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvAlertTitle"
        tools:text="@string/default_site_label" />

    <TextView
        android:id="@+id/tvAlertTimeAgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_small"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/text_small"
        app:layout_constraintBottom_toBottomOf="@+id/tvAlertFromSite"
        app:layout_constraintStart_toEndOf="@+id/tvAlertFromSite"
        app:layout_constraintTop_toTopOf="@+id/tvAlertFromSite"
        tools:text="time ago" />

</androidx.constraintlayout.widget.ConstraintLayout>
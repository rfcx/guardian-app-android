<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor">

    <data>

        <variable
            name="view"
            type="android.view.View" />

        <variable
            name="viewModel"
            type="org.rfcx.incidents.view.profile.guardian.UnsentRegistrationViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbarLayout"
            android:visibility="visible"
            layout="@layout/toolbar_default" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/registrationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/toolbarLayout"/>

        <LinearLayout
            android:id="@+id/noDeploymentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="@{viewModel.noContentState ? view.VISIBLE : view.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/noDeploymentImageView"
                android:layout_width="@dimen/ic_empty_list_size"
                android:layout_height="@dimen/ic_empty_list_size"
                android:src="@drawable/ic_content_paste"
                app:tint="@color/iconColor" />

            <TextView
                android:id="@+id/noDeploymentTextView"
                style="@style/RangerText.SubTitle.Secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_small"
                android:gravity="center"
                android:text="There is no unsent registration." />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

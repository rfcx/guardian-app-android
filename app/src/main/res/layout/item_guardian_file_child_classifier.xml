<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/fileButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/margin_padding_normal">

        <TextView
            android:id="@+id/fileVersionTextView"
            style="@style/RangerText.Label.Secondary"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:textAlignment="textStart"
            tools:text="TextView (installed x . x.)"
            android:layout_weight="2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fileDeActivateButton"
            style="@style/RangerButton.File.DeActive"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:enabled="true"
            android:text="deactivate"
            android:layout_marginStart="@dimen/margin_padding_small"
            android:textSize="@dimen/text_xxsmall"
            android:layout_weight="1"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fileActivateButton"
            style="@style/RangerButton.File.Active"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:enabled="true"
            android:layout_marginStart="@dimen/margin_padding_small"
            android:text="activate"
            android:textSize="@dimen/text_xxsmall"
            android:layout_weight="1"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fileSendButton"
            style="@style/RangerButton.GreenButton"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_padding_small"
            android:enabled="true"
            android:text="update to"
            android:textSize="@dimen/text_xxsmall"
            android:layout_weight="1"
            android:visibility="gone" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/fileLoading"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/margin_padding_small"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_weight="2" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>

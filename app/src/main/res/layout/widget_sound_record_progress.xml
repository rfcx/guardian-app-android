<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal"
	tools:layout_height="56dp">
	
	<View
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginEnd="8dp"
		android:background="@drawable/bg_widget_sound_wave"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/actionButton"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	<androidx.appcompat.widget.AppCompatImageButton
		android:id="@+id/cancelButton"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_marginStart="8dp"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="8dp"
		android:background="@drawable/bg_circle_white"
		android:contentDescription="@string/app_name"
		android:scaleType="fitCenter"
		app:srcCompat="@drawable/ic_close_grey_600_24dp"
		android:tint="@color/grey_default"
		android:visibility="gone"
		app:layout_constraintDimensionRatio="1:1"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	<TextView
		android:id="@+id/tabToRecText"
		android:layout_width="0dp"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="16dp"
		android:layout_height="wrap_content"
		android:text="@string/tab_to_record_label"
		android:textSize="@dimen/text_small"
		app:layout_constraintBottom_toBottomOf="@+id/cancelButton"
		app:layout_constraintEnd_toStartOf="@+id/actionButton"
		app:layout_constraintStart_toEndOf="@id/cancelButton"
		app:layout_constraintTop_toTopOf="@+id/cancelButton" />
	
	<org.rfcx.ranger.widget.NoneTouchableRecycler
		android:id="@+id/recyclerView"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="16dp"
		app:layout_constraintBottom_toBottomOf="@+id/cancelButton"
		app:layout_constraintEnd_toStartOf="@+id/actionButton"
		app:layout_constraintStart_toEndOf="@id/cancelButton"
		app:layout_constraintTop_toTopOf="@+id/cancelButton" />
	
	<androidx.appcompat.widget.AppCompatImageButton
		android:id="@+id/actionButton"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:background="@color/transparent"
		android:contentDescription="@string/app_name"
		android:scaleType="fitCenter"
		app:srcCompat="@drawable/ic_record"
		app:layout_constraintDimensionRatio="1:1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

	<ImageView
		android:id="@+id/notification_image"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_marginBottom="@dimen/margin_padding_normal"
		android:layout_marginLeft="@dimen/margin_padding_normal"
		android:layout_marginRight="@dimen/margin_padding_normal"
		android:layout_marginTop="@dimen/margin_padding_normal"
		android:contentDescription="@string/app_name"
		android:src="@mipmap/ic_launcher_round"/>

	<TextView
		android:id="@+id/notification_title_text"
		style="@style/TextAppearance.AppCompat.Subhead"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/margin_padding_normal"
		android:layout_toEndOf="@id/notification_image"
		android:lines="1"
		android:text="@string/app_name"
		android:textColor="@android:color/black"/>

	<TextView
		android:id="@+id/notification_additional_text"
		style="@style/TextAppearance.AppCompat.Body1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/notification_title_text"
		android:layout_marginTop="4dp"
		android:layout_toEndOf="@id/notification_image"
		android:lines="1"
		android:text="@string/user_location"
		android:textColor="@android:color/darker_gray"/>

	<ImageButton
		android:id="@+id/notification_close_button"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_alignParentEnd="true"
		android:layout_margin="16dp"
		android:background="@android:color/transparent"
		android:contentDescription="@string/app_name"
		android:scaleType="fitXY"
		android:src="@drawable/ic_close_grey_600_24dp"/>

</RelativeLayout>
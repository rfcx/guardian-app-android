<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="@dimen/margin_padding_large">

	<RadioGroup
		android:id="@+id/radioReportGroup"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginEnd="0dp"
		android:layout_marginStart="0dp"
		android:layout_marginTop="0dp"
		android:drawablePadding="@dimen/margin_padding_normal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<RadioButton
			android:id="@+id/chainsawRadio"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/bg_report_radio_button"
			android:button="@null"
			android:drawablePadding="@dimen/margin_padding_normal"
			android:drawableStart="@drawable/ic_chainsaw"
			android:paddingBottom="@dimen/margin_padding_small"
			android:paddingEnd="@dimen/margin_padding_large"
			android:paddingStart="@dimen/margin_padding_large"
			android:paddingTop="@dimen/margin_padding_small"
			android:text="@string/report_chainsaw_button"/>

		<RadioButton
			android:id="@+id/gunshotRadio"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin_padding_normal"
			android:background="@drawable/bg_report_radio_button"
			android:button="@null"
			android:drawableStart="@drawable/ic_gunshort"
			android:paddingBottom="@dimen/margin_padding_small"
			android:paddingEnd="@dimen/margin_padding_large"
			android:paddingStart="@dimen/margin_padding_large"
			android:paddingTop="@dimen/margin_padding_small"
			android:text="@string/report_gunshot_button"/>


		<RadioButton
			android:id="@+id/vehicleRadio"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin_padding_normal"
			android:background="@drawable/bg_report_radio_button"
			android:button="@null"
			android:drawablePadding="@dimen/margin_padding_normal"
			android:drawableStart="@drawable/ic_vehicle"
			android:paddingBottom="@dimen/margin_padding_small"
			android:paddingEnd="@dimen/margin_padding_large"
			android:paddingStart="@dimen/margin_padding_large"
			android:paddingTop="@dimen/margin_padding_small"
			android:text="@string/report_vehicle_button"/>

	</RadioGroup>

	<TextView
		android:id="@+id/reportHaveNoSelected"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="@dimen/margin_padding_normal"
		android:gravity="center_horizontal"
		android:text="@string/report_no_have_select_type"
		android:textColor="@color/text_error"
		android:visibility="gone"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/radioReportGroup"/>


</android.support.constraint.ConstraintLayout>

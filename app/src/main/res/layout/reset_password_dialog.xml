<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="@dimen/margin_padding_normal">
	
	<androidx.appcompat.widget.AppCompatEditText
		android:id="@+id/emailResetPasswordEditText"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="@string/email"
		android:inputType="textEmailAddress"
		app:layout_constraintTop_toTopOf="parent" />
	
	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/errorEmailFormatTextView"
		style="@style/RangerText.Label.Secondary"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:visibility="invisible"
		android:textColor="@color/text_error"
		android:text="Invalid email address"
		android:padding="@dimen/margin_padding_small"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/emailResetPasswordEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>
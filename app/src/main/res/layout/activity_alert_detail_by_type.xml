<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".view.alerts.GuardianListDetail.AlertDetailByType.AlertDetailByTypeActivity">
	
	<androidx.appcompat.widget.Toolbar
		android:id="@+id/toolbarForType"
		android:layout_width="match_parent"
		android:layout_height="?android:actionBarSize"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
		app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
		tools:title=" ← Bear Hut #2 - Chainsaw" />
	
	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/alertDetailByTypeRecycler"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:clipToPadding="false"
		android:paddingBottom="@dimen/fab_height_half"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/toolbarForType" />

</androidx.constraintlayout.widget.ConstraintLayout>


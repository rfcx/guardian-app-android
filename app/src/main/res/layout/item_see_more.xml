<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools">
	
	<data>
		
		<import type="android.view.View" />
		
		<variable
			name="seeMoreItem"
			type="org.rfcx.ranger.view.status.adapter.StatusAdapter.SeeMoreItem" />
		
		<variable
			name="onClickedItem"
			type="android.view.View.OnClickListener" />
	</data>
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:onClick="@{onClickedItem}"
		android:orientation="vertical">
		
		<TextView
			android:id="@+id/titleTextView"
			style="@style/RangerText.Title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@{seeMoreItem.text}"
			android:textColor="@color/colorPrimary"
			android:layout_marginStart="@dimen/margin_padding_normal"
			tools:text="SEE MORE" />
	
	</LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal">
	
	<androidx.appcompat.widget.AppCompatImageButton
		android:id="@+id/vehicleButton"
		style="@style/Widget.AppCompat.Button.Borderless.Colored"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:src="@drawable/ic_vehicle" />
	
	<androidx.appcompat.widget.AppCompatImageButton
		android:id="@+id/peopleButton"
		style="@style/Widget.AppCompat.Button.Borderless.Colored"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:src="@drawable/ic_people" />
	
	<androidx.appcompat.widget.AppCompatImageButton
		android:id="@+id/chainsawButton"
		style="@style/Widget.AppCompat.Button.Borderless.Colored"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:src="@drawable/ic_chainsaw" />
	
	<androidx.appcompat.widget.AppCompatImageButton
		android:id="@+id/gunButton"
		style="@style/Widget.AppCompat.Button.Borderless.Colored"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:src="@drawable/ic_gun" />
	
	<androidx.appcompat.widget.AppCompatImageButton
		android:id="@+id/pinButton"
		style="@style/Widget.AppCompat.Button.Borderless.Colored"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:src="@drawable/ic_pin_huge" />
</androidx.appcompat.widget.LinearLayoutCompat>
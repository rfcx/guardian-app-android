<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/margin_padding_normal"
    android:paddingTop="@dimen/margin_padding_xsmall"
    android:paddingEnd="@dimen/margin_padding_normal"
    android:paddingBottom="@dimen/margin_padding_xsmall">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/iconLayout"
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:layout_marginEnd="@dimen/margin_padding_normal">

		<ImageView
			android:id="@+id/ivEventIcon"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:contentDescription="@string/app_name"
			android:src="@drawable/event_orange" />

		<ImageView
			android:id="@+id/ivEventConfirm"
			android:layout_width="18dp"
			android:layout_height="18dp"
			android:layout_gravity="center"
			android:padding="5dp"
			android:background="@drawable/circle_green_stroke"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
			android:contentDescription="@string/app_name"
			app:srcCompat="@drawable/ic_check" />
	</androidx.constraintlayout.widget.ConstraintLayout>

	<RelativeLayout
		android:id="@+id/layoutEventContent"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@+id/iconLayout">

		<TextView
			android:id="@+id/tvEventValue"
			style="@style/TextAppearance.AppCompat.Menu"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/margin_padding_xsmall"
			android:textStyle="bold"
			android:textColor="@color/text_primary"
			tools:text="Chainsaw" />

		<TextView
			android:id="@+id/tvEventSite"
			style="@style/TextAppearance.AppCompat.Body1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/tvEventValue"
			android:layout_marginStart="@dimen/margin_padding_xsmall"
			android:textColor="@color/text_primary"
			android:textSize="@dimen/text_medium"
			tools:text="Guardian or site" />

		<TextView
			android:id="@+id/tvEventDate"
			style="@style/TextAppearance.AppCompat.Caption"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBaseline="@+id/tvEventSite"
			android:layout_toEndOf="@id/tvEventSite"
			android:textColor="@color/text_secondary"
			tools:text="10:21" />

	</RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/rootView"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/spectrogram_height"
		android:layout_gravity="center">
		
		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/spectrogramImageView"
			android:layout_width="match_parent"
			android:layout_height="@dimen/spectrogram_height"
			android:scaleType="fitXY"
			android:src="@drawable/spectrogram_place_holder" />
		
		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/classificationRecyclerView"
			android:layout_width="match_parent"
			android:layout_height="@dimen/spectrogram_height"
			android:background="@color/transparent" />
		
		<androidx.appcompat.widget.AppCompatSeekBar
			android:id="@+id/soundProgressSeekBar"
			style="@style/Widget.AppCompat.ProgressBar.Horizontal"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingStart="0dp"
			android:paddingEnd="0dp"
			android:progress="0"
			android:progressDrawable="@null"
			android:thumb="@drawable/seek_bar_thumb" />
		
		<ProgressBar
			android:id="@+id/loadingSoundProgressBar"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_gravity="center" />
		
		<ProgressBar
			android:id="@+id/loadingImageProgressBar"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_gravity="center" />
		
		<ImageView
			android:id="@+id/replayButton"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:layout_gravity="center"
			android:adjustViewBounds="true"
			android:background="@color/transparent"
			android:contentDescription="@string/app_name"
			android:scaleType="fitXY"
			android:src="@drawable/ic_replay_black_40dp"
			android:tint="@color/colorPrimaryDark"
			android:visibility="invisible" />
	
	</FrameLayout>
	
	<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?attr/selectableItemBackground"
		android:paddingStart="@dimen/margin_padding_normal"
		android:paddingTop="@dimen/margin_padding_small"
		android:paddingEnd="@dimen/margin_padding_normal"
		android:paddingBottom="@dimen/margin_padding_normal">
		
		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/eventIconImageView"
			android:layout_width="@dimen/report_icon_size"
			android:layout_height="@dimen/report_icon_size"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			tools:src="@drawable/ic_vehicle" />
		
		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/alertTitleLayout"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/margin_padding_small"
			android:layout_marginTop="@dimen/margin_padding_small"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@+id/eventIconImageView"
			app:layout_constraintTop_toTopOf="parent">
			<!--		if do last reviewer change it - android:layout_marginTop="@dimen/margin_padding_xsmall" -->
			
			<TextView
				android:id="@+id/guardianNameTextView"
				style="@style/RangerText.Body"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:maxLines="1"
				android:textStyle="bold"
				app:layout_constrainedWidth="true"
				app:layout_constraintEnd_toStartOf="@id/timeTextView"
				app:layout_constraintHorizontal_bias="0"
				app:layout_constraintHorizontal_chainStyle="packed"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent"
				tools:text="Alert Tilte" />
			
			<TextView
				android:id="@+id/timeTextView"
				style="@style/RangerText.Caption"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				app:layout_constraintBottom_toBottomOf="@+id/alertTitleLayout"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="@+id/alertTitleLayout"
				tools:text="October 29, 2019 19:06" />
		</androidx.constraintlayout.widget.ConstraintLayout>
		
		<TextView
			android:id="@+id/reviewedTextView"
			style="@style/RangerText.Caption"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin_padding_small"
			android:gravity="center_vertical"
			app:layout_constraintStart_toStartOf="@+id/alertTitleLayout"
			app:layout_constraintTop_toBottomOf="@+id/alertTitleLayout"
			tools:text="Last reviewed by" />
		
		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/placeholderIconImageView"
			android:layout_width="@dimen/event_confirm_icon"
			android:layout_height="@dimen/event_confirm_icon"
			android:layout_marginStart="@dimen/margin_padding_xsmall"
			android:layout_marginTop="@dimen/margin_padding_small"
			android:src="@drawable/ic_menu_profile"
			android:tint="@color/text_secondary"
			android:visibility="invisible"
			app:layout_constraintEnd_toStartOf="@id/nameReviewerTextView"
			app:layout_constraintStart_toEndOf="@id/reviewedTextView"
			app:layout_constraintTop_toBottomOf="@+id/alertTitleLayout" />
		
		<TextView
			android:id="@+id/nameReviewerTextView"
			style="@style/RangerText.Caption"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/margin_padding_xsmall"
			android:layout_marginTop="@dimen/margin_padding_small"
			android:layout_marginEnd="@dimen/margin_padding_normal"
			android:ellipsize="end"
			android:gravity="center_vertical"
			android:maxLines="1"
			android:textStyle="bold"
			android:visibility="invisible"
			app:layout_constraintEnd_toStartOf="@+id/linearLayout"
			app:layout_constraintStart_toEndOf="@+id/placeholderIconImageView"
			app:layout_constraintTop_toBottomOf="@+id/alertTitleLayout"
			tools:text="Anuphap" />
		
		<LinearLayout
			android:id="@+id/linearLayout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin_padding_small"
			android:orientation="horizontal"
			android:visibility="invisible"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/alertTitleLayout">
			
			<androidx.appcompat.widget.AppCompatImageView
				android:id="@+id/agreeImageView"
				android:layout_width="@dimen/event_confirm_icon"
				android:layout_height="@dimen/event_confirm_icon"
				android:src="@drawable/ic_confirm_event_gray" />
			
			<TextView
				android:id="@+id/agreeTextView"
				style="@style/RangerText.Caption"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/margin_padding_xsmall"
				tools:text="0" />
			
			<androidx.appcompat.widget.AppCompatImageView
				android:id="@+id/rejectImageView"
				android:layout_width="@dimen/event_confirm_icon"
				android:layout_height="@dimen/event_confirm_icon"
				android:layout_marginStart="@dimen/margin_padding_normal"
				android:src="@drawable/ic_reject_event_gray" />
			
			<TextView
				android:id="@+id/rejectTextView"
				style="@style/RangerText.Caption"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/margin_padding_xsmall"
				tools:text="0" />
		</LinearLayout>
		
		<TextView
			android:id="@+id/locationTextView"
			style="@style/RangerText.Caption"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin_padding_small"
			android:drawableStart="@drawable/ic_pin_grey"
			android:visibility="gone"
			app:layout_constraintStart_toStartOf="@+id/reviewedTextView"
			app:layout_constraintTop_toBottomOf="@id/reviewedTextView"
			tools:text=" 0.000000000" />
	
	</androidx.constraintlayout.widget.ConstraintLayout>
	
	<LinearLayout
		android:id="@+id/buttonView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="top"
		android:orientation="horizontal"
		android:paddingStart="@dimen/margin_padding_normal"
		android:paddingTop="0dp"
		android:paddingEnd="@dimen/margin_padding_normal">
		
		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/negativeButton"
			style="@style/RangerButton.Negative"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginEnd="@dimen/margin_padding_small"
			android:layout_marginBottom="@dimen/margin_padding_normal"
			android:paddingStart="@dimen/margin_padding_normal"
			android:paddingEnd="@dimen/margin_padding_normal"
			tools:text="Negative" />
		
		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/positiveButton"
			style="@style/RangerButton.Positive"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/margin_padding_small"
			android:layout_marginBottom="@dimen/margin_padding_normal"
			android:paddingStart="@dimen/margin_padding_normal"
			android:paddingEnd="@dimen/margin_padding_normal"
			tools:text="Positive" />
	
	</LinearLayout>

</LinearLayout>

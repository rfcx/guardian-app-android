<?xml version="1.0" encoding="utf-8"?>
<com.mapbox.mapboxsdk.annotations.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_padding_large"
    android:layout_marginEnd="@dimen/margin_padding_large"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_padding_small"
    android:paddingLeft="@dimen/margin_padding_small"
    android:paddingEnd="@dimen/margin_padding_small"
    android:paddingRight="@dimen/margin_padding_small"
    android:paddingBottom="6dp"
    app:mapbox_bl_arrowDirection="bottom"
    app:mapbox_bl_arrowHeight="8dp"
    app:mapbox_bl_arrowPosition="90dp"
    app:mapbox_bl_arrowWidth="8dp"
    app:mapbox_bl_bubbleColor="@color/backgroundColor"
    app:mapbox_bl_cornersRadius="8dp"
    app:mapbox_bl_strokeColor="@android:color/darker_gray"
    app:mapbox_bl_strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_padding_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_small"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/deploymentSiteTitle"
                style="@style/RangerText.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                tools:text="MA19" />

            <LinearLayout
                android:id="@+id/guardianTypeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/guardianTypeImageView"
                    android:src="@drawable/ic_signal_cellular_alt"
                    android:layout_width="@dimen/type_icon_size"
                    android:layout_height="@dimen/type_icon_size"
                    android:layout_marginStart="@dimen/margin_padding_xsmall"
                    app:tint="@color/iconColor" />

                <TextView
                    android:id="@+id/guardianTypeTextView"
                    style="@style/RangerText.Label.Secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_gravity="center"
                    tools:text="Cell" />

            </LinearLayout>

            <TextView
                android:id="@+id/projectName"
                style="@style/RangerText.Body.Secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_padding_normal"
                android:gravity="end"
                tools:text="Puerto Rico" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/guardianNameTextView"
                style="@style/RangerText.SubTitle.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="AudioMoth" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_normal"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/ic_calendar"
                android:tint="@color/grey_active" />

            <TextView
                android:id="@+id/deployedAtLabel"
                style="@style/RangerText.Body.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_padding_xsmall"
                android:text="Deployed at" />

            <TextView
                android:id="@+id/deployedAt"
                style="@style/RangerText.Body.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_padding_xsmall"
                tools:text="26/04/2021 09:38" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_small"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_room"
                android:tint="@color/grey_active" />

            <TextView
                android:id="@+id/latLngTextView"
                style="@style/RangerText.Body.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_padding_xsmall"
                tools:text="18.146°N, 100.213°E" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding_normal"
            android:layout_marginBottom="@dimen/margin_padding_xsmall"
            android:orientation="horizontal">

            <TextView
                style="@style/RangerText.Body.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="See Deployment detail"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</com.mapbox.mapboxsdk.annotations.BubbleLayout>


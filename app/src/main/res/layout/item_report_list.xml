<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingStart="@dimen/margin_padding_normal"
	android:paddingTop="@dimen/margin_padding_small"
	android:paddingEnd="@dimen/margin_padding_normal"
	android:paddingBottom="@dimen/margin_padding_small">
	
	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/reportTypeImageView"
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:contentDescription="@string/app_name"
		android:src="@drawable/ic_other"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	<TextView
		android:id="@+id/reportTypeNameTextView"
		style="@style/TextAppearance.AppCompat.Menu"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/margin_padding_xsmall"
		android:maxLines="1"
		android:textAllCaps="true"
		android:textColor="@color/text_primary"
		android:textStyle="bold"
		app:layout_constraintStart_toEndOf="@id/reportTypeImageView"
		app:layout_constraintTop_toTopOf="@id/reportTypeImageView"
		app:layout_goneMarginStart="@dimen/margin_padding_normal"
		tools:text="Chainsaw" />
	
	<TextView
		android:id="@+id/reportLocationTextView"
		style="@style/TextAppearance.AppCompat.Body1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/margin_padding_xsmall"
		android:drawableStart="@drawable/ic_location_24dp"
		android:gravity="center_vertical"
		android:maxLines="1"
		android:textColor="@color/text_secondary"
		app:layout_constraintStart_toStartOf="@id/reportTypeNameTextView"
		app:layout_constraintTop_toBottomOf="@id/reportTypeNameTextView"
		tools:text="12.1,100.2" />
	
	<TextView
		android:id="@+id/messageTimeTextView"
		style="@style/TextAppearance.AppCompat.Caption"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/margin_padding_normal"
		android:textColor="@color/text_secondary"
		app:layout_constraintBottom_toBottomOf="@+id/reportTypeNameTextView"
		app:layout_constraintStart_toEndOf="@id/reportTypeNameTextView"
		tools:text="10:21" />
	
	<TextView
		android:id="@+id/syncedTextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/syncedSymbol"
		android:textSize="@dimen/text_medium"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
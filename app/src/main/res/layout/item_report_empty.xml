<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:orientation="vertical"
	android:paddingStart="@dimen/margin_padding_normal"
	android:paddingTop="@dimen/margin_padding_large"
	android:paddingEnd="@dimen/margin_padding_normal"
	android:paddingBottom="@dimen/margin_padding_normal">
	
	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/emptyReportImageView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/ic_empty_report" />
	
	<TextView
		android:id="@+id/emptyReportTextView"
		style="@style/RangerText.Label"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:layout_marginTop="@dimen/margin_padding_normal"
		android:text="@string/empty_report_text" />
	
	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/pointReportImageView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/margin_padding_normal"
		android:src="@drawable/ic_down_finger" />

</LinearLayout>
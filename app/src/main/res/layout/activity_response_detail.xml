<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".view.report.detail.ResponseDetailActivity">
	
	<include
		android:id="@+id/toolbarLayout"
		layout="@layout/toolbar_default" />
	
	<androidx.core.widget.NestedScrollView
		android:id="@+id/guardianListScrollView"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:overScrollMode="never"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/toolbarLayout">
		
		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/listSteamLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			
			<androidx.appcompat.widget.AppCompatImageView
				android:id="@+id/scheduleImageView"
				android:layout_width="@dimen/icon_front_text"
				android:layout_height="@dimen/icon_front_text"
				android:layout_margin="@dimen/margin_padding_normal"
				android:src="@drawable/ic_schedule"
				app:layout_constraintBottom_toBottomOf="@id/investigateAtTextView"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="@id/investigateAtTextView" />
			
			<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/investigateAtTextView"
				style="@style/RangerText.Label"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:paddingStart="@dimen/margin_padding_small"
				android:paddingTop="@dimen/margin_padding_normal"
				android:paddingEnd="@dimen/margin_padding_normal"
				android:paddingBottom="@dimen/margin_padding_normal"
				app:layout_constraintStart_toEndOf="@id/scheduleImageView"
				app:layout_constraintTop_toTopOf="parent"
				tools:text="28 0ct 2021, 15:45" />
			
			<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/answersTextView"
				style="@style/RangerText.SubTitle.Secondary"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingStart="@dimen/margin_padding_normal"
				android:paddingEnd="@dimen/margin_padding_normal"
				android:paddingBottom="@dimen/margin_padding_small"
				android:text="@string/answers"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@id/investigateAtTextView" />
			
			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/answersRecyclerView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@color/white"
				android:dividerHeight="1dp"
				android:overScrollMode="never"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@id/answersTextView" />
			
			
			<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/assetsTextView"
				style="@style/RangerText.SubTitle.Secondary"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingStart="@dimen/margin_padding_normal"
				android:paddingEnd="@dimen/margin_padding_normal"
				android:paddingBottom="@dimen/margin_padding_small"
				android:text="@string/assets"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@id/answersRecyclerView" />
			
			<androidx.appcompat.widget.AppCompatTextView
				android:id="@+id/noteTextView"
				style="@style/RangerText.Label"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="@dimen/margin_padding_small"
				android:paddingStart="@dimen/margin_padding_normal"
				android:paddingEnd="@dimen/margin_padding_normal"
				android:paddingBottom="@dimen/margin_padding_small"
				android:text="@string/note"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@id/assetsTextView" />
			
		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

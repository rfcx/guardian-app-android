<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	
	<TextView
		android:id="@+id/eventsInEventsTextView"
		style="@style/RangerText.SubTitle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:textStyle="bold"
		android:padding="@dimen/margin_padding_normal"
		android:layout_marginStart="@dimen/margin_padding_normal"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="Time" />
	
	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/circleImageView"
		android:layout_width="10dp"
		android:layout_height="10dp"
		android:layout_marginEnd="@dimen/margin_padding_xlarge"
		android:src="@drawable/bg_circle_green"
		app:layout_constraintBottom_toBottomOf="@id/eventsInEventsTextView"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@id/eventsInEventsTextView" />
	
</androidx.constraintlayout.widget.ConstraintLayout>